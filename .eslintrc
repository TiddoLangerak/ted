{
  "extends" : [ "airbnb", "plugin:flowtype/recommended" ],
  "parser": "babel-eslint",
  "plugins" : [ "flowtype" ],
  "rules": {
    "flowtype/require-valid-file-annotation": [
      2,
    "always", {
      "annotationStyle": "block"
    }
    ],
    "no-param-reassign" : [
      "error",
      {
        "props": false,
      }
    ],
    "quote-props" : [
      "error",
      "as-needed",
      { "numbers" : true }
    ]
  },
  "env": {
    "es6": true,
    "node": true
  }
}
