{
    "parser": "babel-eslint",
    "rules": {
        "no-console" : [0],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "no-mixed-spaces-and-tabs" : [2, "smart-tabs"]
    },
    "env": {
        "es6": true,
        "node": true
    },
    "ecmaFeatures" : {
      "modules" : true
    },
    "extends": "eslint:recommended"
}
